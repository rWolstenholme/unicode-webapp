extends layout

block head-extras
    link(rel='stylesheet', href='/stylesheets/char.css')
    title= char.Name+' UW Character'
    meta(description='Information on the unicode character '+char.Name)

block content

    div#charBig= char.Character
    h1(style="padding:30px") You searched for #{char.Character}
    table#details
        each val,key in char
            tr
                td=key
                td=val
    if char['Has Emoji']
        table#emoji
            tr
                td Apple
                td Android
                td Windows
                td Twitter
            tr
                td
                    if char.Emoji.indexOf("apple")!=-1
                        img(src="images/apple/apple_"+char['Code Point'].toLowerCase()+".png")
                td
                    if char.Emoji.indexOf("android")!=-1
                        img(src="images/android/android_"+char['Code Point'].toLowerCase()+".png")
                td
                    if char.Emoji.indexOf("windows")!=-1
                        img(src="images/windows/windows_"+char['Code Point'].toLowerCase()+".png")
                td
                    if char.Emoji.indexOf("twitter")!=-1
                        img(src="images/twitter/twitter_"+char['Code Point'].toLowerCase()+".png")

